{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>CodeCategorie</th>
                <th>LibelleCategorie</th>
                <th>DescriptionCategorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.codeCategorie }}</td>
                <td>{{ categorie.libelleCategorie }}</td>
                <td>{{ categorie.descriptionCategorie }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'codeCategorie': categorie.codeCategorie}) }}">show</a>
                    <a href="{{ path('app_categorie_edit', {'codeCategorie': categorie.codeCategorie}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}">Create new</a>
{% endblock %}
