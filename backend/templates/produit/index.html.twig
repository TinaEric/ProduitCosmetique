{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NumProduit</th>
                <th>NomProduit</th>
                <th>PrixProduit</th>
                <th>StockProduit</th>
                <th>ImageUrlProduit</th>
                <th>CodePromos</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.numProduit }}</td>
                <td>{{ produit.nomProduit }}</td>
                <td>{{ produit.prixProduit }}</td>
                <td>{{ produit.stockProduit }}</td>
                <td>{{ produit.imageUrlProduit }}</td>
                <td>{{ produit.codePromos }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'numProduit': produit.numProduit}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'numProduit': produit.numProduit}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
